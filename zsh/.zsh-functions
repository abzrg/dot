# Fix the problem with the conflict between gnu-parallell and moreutils
__fix_parallel_moreutil_conflict() {
  brew unlink moreutils
  brew install parallel
  brew link --overwrite moreutils
  brew unlink parallel
  brew link --overwrite parallel
}

vhich(){
  $EDITOR "`which $1`"
}


td() {
  awk '/^----/ {c++} c==1 && /^\+/' ~/..plann
}


mpich() {
    local mpich_prefix="$HOME/opt/mpich/mpich-4.3.0"
    export PATH="$mpich_prefix/bin:$PATH"
    export MANPATH="$mpich_prefix/share/man/:$MANPATH"
    export DYLD_LIBRARY_PATH="$HOME/.local/lib:$DYLD_LIBRARY_PATH"
    export CC="mpicc"
    export CXX="mpic++"
    export LDLIBS="-lmpi $LDLIBS"
    export LDFLAGS="-L$mpich_prefix/lib $LDFLAGS"
    export CFLAGS="-I$mpich_prefix/include -Wall -Wextra $CFLAGS"
    export CXXFLAGS="-I$mpich_prefix/include -Wall -Wextra $CXXFLAGS"
    printf "Enabled mpich-4.3.0 from %s\n" $mpich_prefix
}



