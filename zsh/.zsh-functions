function ytdl() {
  local archive_file="yt-dlp_playlist_archive.txt"

  local opts=(
    --cookies ~/.yt-dlp-yt-cookies.txt
    --no-warning
    --ignore-errors
    --embed-metadata
    --continue
    --retries inf
    --retry-sleep 5
    --sleep-interval 3
  )

  local opts_quality=(-f 'bestvideo[height<=?720]+bestaudio/best')
  local positional_args=()

  while [[ $# -gt 0 ]]; do
    case "$1" in
      -pl|-playlist)
        opts+=(
          -o '%(playlist_index)s-%(title)s-%(id)s.%(ext)s'
          --yes-playlist
        )
        ;;
      -480p)
        opts_quality=(-f 'bestvideo[height<=?480]+bestaudio/best')
        ;;
      -1080p)
        opts_quality=(-f 'bestvideo[height<=?1080]+bestaudio/best')
        ;;
      -sony)
        opts_quality=(-f 'bestvideo[ext=mp4][height<=?720]+bestaudio[ext=mp3]/best[ext=mp4]/best')
        ;;
      -sub|-subtitle)
        opts+=(
          --skip-download
          --write-sub
          --write-auto-subs
          --sub-lang en
        )
        ;;
      -embed)
        opts+=(
          --embed-subs
          --embed-thumbnail
          --embed-metadata
          --embed-chapters
        )
        ;;
      -srt)
        opts+=(
          --skip-download
          --write-sub
          --write-auto-subs
          --sub-lang en
          --convert-subs srt
        )
        ;;
      -audio|-au|-music|-mu)
        opts+=(
          --extract-audio
          --audio-format opus
          --audio-quality 0
        )
        opts_quality=(-f 'bestaudio/best')
        ;;
      -ar|-archive)
        opts+=("--download-archive" "$archive_file")
        ;;
      *)
        positional_args+=("$1")
        ;;
    esac
    shift
  done

  echo
  echo yt-dlp "${opts[@]}" "${opts_quality[@]}" "${positional_args[@]}"
  echo
  yt-dlp "${opts[@]}" "${opts_quality[@]}" "${positional_args[@]}"
}

# Enable completion if using zsh
compdef _ytdl yt-dlp
compdef _ytdl yt-dlp

