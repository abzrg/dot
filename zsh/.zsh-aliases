    egrep='egrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'          \
    fgrep='fgrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'          \
    diff='diff'                                                                \

