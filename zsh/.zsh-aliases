#!/bin/sh

# Reoload config (source zshrc)
alias sz='source $HOME/.zshrc'

# Global aliases
alias -g R=";clear;test -n "$TMUX" && tmux clear-history;"    # Mnemonic: "[R]eset"
alias -g L="|& less"                                          # Mnemonic: "[L]ess"
alias -g WC='| wc -l'                                         # Mnemonic: "[W]c"
alias -g HL='--help | less'                                   # Mnemonic: "[H]elp [L]ess"
alias -g HG='--help 2>&1 | grep'                              # Mnemonic: "[H]elp [G]rep"

alias o='open'
compdef o=open

alias g='git'
compdef g=git

alias \
    v=nvim \
    vimdiff="nvim -d"
compdef v=nvim

alias \
    edit="emacsclient --alternate-editor='' -nc -F \"'(fullscreen . maximized)\"" \
    e="edit"

alias \
    ls='ls --group-directories-first -GCF --color=auto' \
    l='ls' \
    sl=ls \
    ll='ls -lhtr' \
    la='ls -A'

# More verbosity
alias \
    cp='cp -iv' \
    mv='mv -iv' \
    rm='rm -v' \
    ln='ln -iv'

# Sensible defaults
alias \
    df='df -h' \
    type='type -a' \
    which='which -a' \
    mkd='mkdir -pv' \
    grep='ggrep --color=auto --exclude-dir={.bzr,CVS,.git,.hg,.svn}'

# Change directory easily
alias \
    cd..='cd ..'                                   \
    dl="cd ${XDG_DOWNLOAD_DIR:-$HOME/Downloads}"   \
    doc="cd ${XDG_DOCUMENTS_DIR:-$HOME/Documents}" \
    vid="cd ${XDG_VIDEOS_DIR:-$HOME/Movies}"

# Directory stack navigation
alias d='dirs -v'
for index ({1..9}) alias "$index"="cd +${index}"; unset index

# OpenFOAM
alias of2412="source ~/OpenFOAM/OpenFOAM-v2412/etc/bashrc"
alias of2312='source ~/OpenFOAM/OpenFOAM-v2312/etc/bashrc'
alias of9="source ~/OpenFOAM/OpenFOAM-9/etc/bashrc"

# Paraview
paraview () {
    local _paraviews=(/Applications/[Pp][Aa][Rr][Aa][Vv][Ii][Ee][Ww]*.app)
    $_paraviews/Contents/MacOS/paraview "$@"
}
alias paraFoam="touch foam.foam && paraview foam.foam"

# Other CAD
alias ovito='/Applications/Ovito.app/Contents/MacOS/ovito'
alias freecad='/Applications/FreeCAD.app/Contents/MacOS/FreeCAD'

# MISC.
alias rcp='rsync -avh --progress'
alias wget='wget --hsts-file ~/.cache/wget-hsts'
alias rwget='wget -c --read-timeout=5 --timeout=5 --tries=0'
alias pydoc='python -m pydoc'
alias path='echo $PATH | tr -s ":" "\n"'
alias vpn="export https_proxy=http://localhost:8081 http_proxy=http://localhost:8081"
alias vtor="export https_proxy=http://localhost:9080 http_proxy=http://localhost:9080"
alias unvpn="unset http_proxy https_proxy"
alias more='less -Xe'
alias calc='python -i -c "from math import *; import os; print(\"WELCOME TO CALC\")"'
alias pp='python -i -c "from pprint import pprint"'
alias hss='hugo server --noHTTPCache --disableFastRender'
alias pg='ping google.com'
alias yamlcheck='python -c "import sys, yaml as y; y.safe_load(open(sys.argv[1]))"'
alias jsoncheck='jq "." >/dev/null <'
alias p=python
alias mlkit='vact ~/opt/mlkit/mlkit-3.10/'
alias va=vact
alias brew='HOMEBREW_NO_VERIFY_ATTESTATIONS=1 command brew'
alias n=neomutt
alias news=newsboat
alias torlog='tail -f /opt/homebrew/var/log/tor.log'
alias bat='bat -pn'

