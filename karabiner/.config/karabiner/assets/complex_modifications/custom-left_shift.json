{
  "title": "Change right_shift to \\ and right shift",
  "rules": [
	{
	  "description": "change input source if left_shift is tapped, left_shift if held.",
	  "manipulators": [
    {
    "type": "basic",
    "from": {
        "key_code": "left_shift",
        "modifiers": {
            "optional": [
                "any"
            ]
        }
    },
    "to": [
        {
            "key_code": "left_shift",
            "lazy": true
        }
    ],
    "to_if_alone": [
        {
          "select_input_source": {
            "language": "fa"
          }
        }
    ]
}
	  ]
	}
  ]
}
